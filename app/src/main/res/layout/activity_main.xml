<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#FFFFFF">

    <!-- Logo o icono -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="32dp"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="UberMax" />

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UberMax"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:layout_marginBottom="8dp" />

    <!-- Subtítulo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conductor Inteligente"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="48dp" />

    <!-- Estado de la app -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verificando permisos..."
        android:textSize="16sp"
        android:textColor="#333333"
        android:gravity="center"
        android:background="#F5F5F5"
        android:padding="20dp"
        android:layout_marginBottom="32dp"
        android:lineSpacingExtra="4dp" />

    <!-- Botón principal -->
    <Button
        android:id="@+id/permission_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Configurar Permisos"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_primary"
        android:layout_marginBottom="24dp"
        android:elevation="2dp" />

    <!-- Información adicional -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Solo funciona cuando actives zona preferencial en el bot\n• Envía ubicación al backend automáticamente\n• Inicia automáticamente después de reiniciar"
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:lineSpacingExtra="2dp" />

</LinearLayout> 